<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/Arms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:srcCompat="@drawable/arms" />

        <ImageView
            android:id="@+id/Ears"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:srcCompat="@drawable/ears" />

        <ImageView
            android:id="@+id/EyeBrows"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyebrows" />

        <ImageView
            android:id="@+id/Eyes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyes" />

        <ImageView
            android:id="@+id/Glasses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:srcCompat="@drawable/glasses" />

        <ImageView
            android:id="@+id/Hat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:srcCompat="@drawable/hat" />

        <ImageView
            android:id="@+id/Mouth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:srcCompat="@drawable/mouth" />

        <ImageView
            android:id="@+id/Moustache"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:srcCompat="@drawable/mustache" />

        <ImageView
            android:id="@+id/Nose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:srcCompat="@drawable/nose" />

        <ImageView
            android:id="@+id/Shoes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:srcCompat="@drawable/shoes" />

    </FrameLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51">

        <CheckBox
            android:id="@+id/checkBoxArms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="@string/Arms"
            app:layout_column="4"
            app:layout_row="1"
            tools:text="Arms" />

        <CheckBox
            android:id="@+id/checkBoxEars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="@string/Ears"
            app:layout_column="4"
            app:layout_row="2"
            tools:text="Ears" />

        <CheckBox
            android:id="@+id/checkBoxEyeBrows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="@string/EyeBrows"
            app:layout_column="4"
            app:layout_row="3" />

        <CheckBox
            android:id="@+id/checkBoxEyes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="@string/Eyes"
            app:layout_column="4"
            app:layout_row="4" />

        <CheckBox
            android:id="@+id/checkBoxGlasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="@string/Glasses"
            app:layout_column="4"
            app:layout_row="5"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/checkBoxHat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="@string/Hat"
            app:layout_column="5"
            app:layout_row="1" />

        <CheckBox
            android:id="@+id/checkBoxMouth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="@string/Mouth"
            app:layout_column="5"
            app:layout_row="2" />

        <CheckBox
            android:id="@+id/checkBoxMoustache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="@string/Moustache"
            app:layout_column="5"
            app:layout_row="3" />

        <CheckBox
            android:id="@+id/checkBoxNose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="@string/Nose"
            app:layout_column="5"
            app:layout_row="4" />

        <CheckBox
            android:id="@+id/checkBoxShoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="@string/Shoes"
            app:layout_column="5"
            app:layout_row="5" />
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>